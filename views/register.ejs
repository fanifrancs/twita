<%- include ('./partials/header') %>
    <div class="form-center">
      <div class="container mt-4">
        <h2 class="text-center">Register</h2>
        <form method="post" action="/register">
          <input 
            id="username"
            class="form-control"
            minlength="3"
            placeholder="username"
            type="text"
            name="username"
            required
          ><br>
          <input id="p1" class="form-control" minlength="6" placeholder="password" type="password" name="password" required><br>
          <input id="p2" class="form-control" minlength="6" placeholder="confirm password" type="password" required><br>
          <p id="message"></p>
          <input id="submit" class="btn btn-success" type="submit" name="submit">
          <p class="mt-3">Already registered? <a href="/login">login</a></p>
        </form>
      </div>
    </div>
    <script src="/form_validate.js"></script>
<%- include ('./partials/footer') %>
