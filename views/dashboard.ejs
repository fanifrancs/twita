<%- include ('./partials/header') %>
    <div class="container mt-2">
        <p class="container">Hello <%= currentUser.username %>, here is your dashboard and below are the tweets you have posted so far. Click the delete button to delete any tweet you wish. Happy tweeting!</p>
        <% user.tweets.slice().reverse().forEach((tweet) => { %>
            <div class="mt-2 p-2 bg-dark text-white rounded">
                <h5>
                    <span class="m-2 badge bg-light text-dark"><%= tweet.author.username %>, <%= tweet.created.toLocaleString() %></span>
                </h5>
                <p class="m-2 pointer" onclick="location.replace('tweets/<%= tweet._id %>')">
                    <% if (tweet.content.length > 100) { %>
                        <%= tweet.content.substring(0, 100) %>...
                    <% } else { %>
                        <%= tweet.content %>
                    <% } %>
                </p>
                <form method="post" action="/tweets/<%= tweet._id %>/delete">
                    <button class="m-2 btn btn-sm btn-danger" type="submit">delete</button>
                </form>
            </div>
        <% }) %>
    </div>
<%- include ('./partials/footer') %>
