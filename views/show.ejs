<%- include ('./partials/header') %>
    <div class="container mt-2 p-2 bg-dark text-white rounded">
      <span class="m-2"><%= tweet.author.username %>, <%= tweet.created.toLocaleString() %></span>
      <p class="tweet m-2">
        <%= tweet.content %>
      </p>
      <h5>
        <i class="m-2 badge bg-light text-dark">comments</i>
      </h5>
      <% tweet.comments.forEach((comment) => { %>
        <p class="container"><b><%= comment.author.username %></b> : <%= comment.comment %></p>
      <% }) %>
      <form class="container form-comment" method="post" action="/tweets/<%= tweet._id %>/comment">
        <textarea class="form-control" placeholder="Add a comment" rows="2" name="comment" required></textarea><br>
        <input class="btn btn-primary" type="submit" name="submit">
      </form>
    </div>
<%- include ('./partials/footer') %> 
